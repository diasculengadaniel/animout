	version="4.0"
	encoding="utf-8">
	
	<servlet>
	
		<servlet-name>Cadastro</servlet-name>
		<servlet-class>com.example.web.CadastServlet</servlet-class>
		
		<init-param>
			<param-name>servletVersion</param-name>
			<param-value>1.0.1</param-value>
		</init-param>
		
	</servlet>
	
	<servlet-mapping>
